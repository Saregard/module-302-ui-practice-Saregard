<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/background2blurry">



    <TextView
        android:id="@+id/brand_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textSize="80sp"
        android:textAlignment="center"
        android:fontFamily="@font/pacifico"
        android:textColor="@color/black"
        android:text="@string/brand_name"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="120dp"
        android:hint="@string/email"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColorHint="@color/sky_color"
        android:textColor="@color/sky_color"
        android:backgroundTint="@color/sky_color"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginHorizontal="100dp"
        android:hint="@string/password"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColorHint="@color/sky_color"
        android:textColor="@color/sky_color"
        android:inputType="textPassword"
        android:backgroundTint="@color/sky_color"/>

    <Button
        android:id="@+id/login"
        android:text="@string/login"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@drawable/white_background"/>

    <TextView
        android:id="@+id/forgot_password"
        android:text="@string/forgot_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/sky_color"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textSize="12sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/or"
            android:text="@string/or"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/sky_color"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textSize="12sp"

            android:lineSpacingExtra="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="-1dp"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="220dp"
            android:background="@color/sky_color"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="220dp"
            android:layout_marginEnd="100dp"
            android:background="@color/sky_color"/>
    </LinearLayout>


    <Button
        android:id="@+id/log_in_with_facebook"
        android:text="@string/log_in_with_facebook"
        android:textSize="13sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/sky_color"
        android:background="@drawable/facebook_blue_background"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="100dp"/>



</LinearLayout>